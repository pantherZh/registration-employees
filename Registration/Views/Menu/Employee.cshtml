@model IEnumerable<Registration.Models.Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SomeView</title>
</head>
<body>
    <h3>List of employees</h3>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Number</th>
                <th scope="col">Surname</th>
                <th scope="col">Name</th>
                <th scope="col">Patronymic</th>
                <th scope="col">Employment Date</th>
                <th scope="col">Position</th>
                <th scope="col">Company</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.SurName</td>
                <td>@item.Name</td>
                <td>@item.Patronymic</td>
                <td>@item.EmploymentDate</td>
                <td>@item.Position</td>
                <td>@item.Company.Name</td>
                <td><a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                <td><a asp-controller="Menu" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            </tr>
            }
        </tbody>
    </table>
    @using (Html.BeginForm("Add", "Menu", FormMethod.Post))
    {
        <button name="action" value="add">Add new Employee</button>
    }
</body>
</html>